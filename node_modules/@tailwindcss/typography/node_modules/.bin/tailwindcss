#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules/tailwindcss/lib/node_modules:/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules/tailwindcss/node_modules:/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules:/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules/tailwindcss/lib/node_modules:/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules/tailwindcss/node_modules:/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules:/proc/cygdrive/d/Quorium-internship/hotel-management-frontend/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../../tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules/tailwindcss/lib/cli.js" "$@"
else
  exec node  "$basedir/../../../../../../tailwindcss@3.4.17_ts-node@_382b986131d83ecd063e92e9e47ebda4/node_modules/tailwindcss/lib/cli.js" "$@"
fi
